<p id="notice"><%= notice %></p>

<h1>Ownedgames</h1>





<div class="container mx-auto user_photo_feed">
    <div class="row justify-content-start">
      <% if @ownedgames.blank? %>
        <h4>You haven't added any games to your Owned Collection.</h4>
      <% else %>
        <% @ownedgames.each do |game| %>
          <% if game.user == current_user %>
            <div class="col-6 col-sm-4">
              <div class="card items_card">
                <div class="card-body">
                    <%= image_tag(game["game_image"], class: "game_card_image") %>
                  <div class="text_box">
                    <p class="card-text"><span class="item_name"><%= game["game_name"] %></span></p>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
  </div>
</div>




<table>
  <thead>
    <tr>
      <th>Game api</th>
      <th>Game name</th>
      <th>Game image</th>
      <th>Game owned</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ownedgames.each do |ownedgame| %>
      <tr>
        <td><%= ownedgame.game_api_id %></td>
        <td><%= ownedgame.game_name %></td>
        <td><%= ownedgame.game_image %></td>
        <td><%= ownedgame.user_id %></td>
        <td><%= link_to 'Show', ownedgame %></td>
        <td><%= link_to 'Edit', edit_ownedgame_path(ownedgame) %></td>
        <td><%= link_to 'Destroy', ownedgame, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
